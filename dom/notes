//get access of id and store it in a variable, for easy access of values
const title = document.getElementById('title')
title
<h1 id=​"title" class=​"test">​ DOM learning on chai aur code ​</h1>​

//applying some operation
title.innerText
'DOM learning on chai aur code'
title.textContent
' DOM learning \n            on chai aur code test text\n      
it shows difference between innerText and textContent
// innerContent show only visible text
// textContent show whole text

title.innerHTML
